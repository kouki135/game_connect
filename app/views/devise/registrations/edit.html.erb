<%= render "shared/header" %>

<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Profile Edit</h2>
      <h5>プロフィール編集</h5>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: @user %>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :ニックネーム（必須）%>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :メールアドレス（必須）%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :パスワード（必須）%>
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :パスワード（確認用）%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>

          <div class='form-text-wrap'>
            <label class="form-text">生年月日（任意）</label>
          </div>
          <div class='input-birth-wrap'>
            <%= raw sprintf(
                        f.date_select(
                          :birthday,
                          class:'select-birth',
                          id:"birth-date",
                          use_month_numbers: true,
                          prompt:'--',
                          start_year: 1930,
                          end_year: (Time.now.year - 5),
                          date_separator: '%s'),
                        "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :性別（任意）%>
          </div>
          <div class='field-input'>
            <%= f.select :gender, [["男性", "男性"], ["女性", "女性"]], include_blank: "選択して下さい" %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :お気に入りゲームタイトル（任意）%>
          </div>
          <div class='field-input'>
            <%= f.text_field :favorite_game_title%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :自己紹介文（任意）%>
          </div>
          <div class='field-input'>
            <%= f.text_area :self_introduction, size: "50x8"%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>